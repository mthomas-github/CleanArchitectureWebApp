<TelerikAvatar 
    Type="AvatarType.Icon"
    FillMode="@FillMode"
    Rounded="@Rounded"
    Size="@Size"
    ThemeColor="@ThemeColor"
    Bordered="@Bordered">
    <TelerikSvgIcon Icon="@SvgIcon.User"></TelerikSvgIcon>
</TelerikAvatar>

@code {
    private bool Bordered { get; set; } = false;
    private string FillMode { get; set; } = "ThemeConstants.Button.FillMode.Solid";
    private string Rounded { get; set; } = "ThemeConstants.Button.Rounded.Full";
    private string Size { get; set; } = "ThemeConstants.Button.Size.Larger";
    private string ThemeColor { get; set; } = "ThemeConstants.Button.ThemeColor.Warning";
}